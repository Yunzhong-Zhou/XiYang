<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--        <item name="android:windowBackground">@mipmap/background</item>&lt;!&ndash;启动背景&ndash;&gt;-->
        <item name="android:windowIsTranslucent">true</item>//透明属性
        <!--<item name="android:navigationBarColor"></item>&lt;!&ndash;导航栏颜色&ndash;&gt;-->
        <!--<item name="android:statusBarColor"></item>&lt;!&ndash;状态栏颜色&ndash;&gt;-->

        <item name="android:textColor">@color/black1</item><!--默认字体颜色-->
        <item name="android:textSize">14.0sp</item><!--默认字号-->
        <item name="android:typeface">normal</item><!--默认字体-->
        <!--<item name="android:textScaleX">1.0</item>&lt;!&ndash;字体间距&ndash;&gt;-->
    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/xian</item>
        <!--        <item name="colorBackgroundFloating">@color/xian</item>-->
        <item name="colorControlActivated">@color/black3</item>
        <!--        <item name="colorControlHighlight">@color/black3</item>-->

    </style>

    <!--popupwindow 底部弹出动画-->
    <style name="take_pop_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim</item>
    </style>

    <!--朋友圈图片全屏样式-->
    <style name="Pic_Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">1</item>
        <!-- 动画 -->
        <item name="android:windowAnimationStyle">@style/ShowImageDialogAnimation</item>
    </style>
    <style name="ShowImageDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/scale_in</item>
        <item name="android:windowExitAnimation">@anim/scale_out</item>
    </style>

</resources>