<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@mipmap/bg_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/headView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/left_btn"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:onClick="onClick"
                android:padding="20dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_return" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="提现"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/right_btn"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:onClick="onClick"
                android:padding="16dp"
                android:scaleType="fitCenter"
                android:visibility="invisible" />

        </LinearLayout>

        <!--只需要刷新只写header-->
        <com.liaoinstan.springview.widget.SpringView
            android:id="@+id/springView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="可用余额"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="29dp"
                            android:layout_height="29dp"
                            android:layout_marginRight="12dp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="22sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <com.lihang.ShadowLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="8dp"
                        app:hl_cornerRadius="15dp"
                        app:hl_shadowColor="#21555555"
                        app:hl_shadowLimit="2dp"
                        app:hl_shadowOffsetX="0dp"
                        app:hl_shadowOffsetY="2dp"
                        app:hl_shadowHiddenTop="true">

                        <LinearLayout
                            android:id="@+id/ll_usdt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/yuanjiao_15_baise"
                            android:orientation="vertical"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="30dp"
                                android:text="提现金额"
                                android:textStyle="bold"
                                android:textColor="@color/black3"
                                android:textSize="12.5sp" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageView2"
                                    android:layout_width="30dp"
                                    android:layout_height="28dp"
                                    android:layout_centerVertical="true"
                                    android:visibility="gone" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="￥"
                                    android:textColor="@color/black2"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <EditText
                                    android:id="@+id/editText1"
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp"
                                    android:hint="请输入提现金额"
                                    android:inputType="numberDecimal"
                                    android:paddingLeft="20dp"
                                    android:singleLine="true"
                                    android:textColor="@color/black2"
                                    android:textColorHint="@color/black3"
                                    android:textSize="20sp"
                                    android:background="@drawable/edittext_bg" />

                            </RelativeLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:text="提现至"
                                android:textStyle="bold"
                                android:textColor="@color/black3"
                                android:textSize="12.5sp" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/imageView3"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@mipmap/ic_bank_blue"/>
                                <TextView
                                    android:id="@+id/textView3"
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp"
                                    android:gravity="center_vertical"
                                    android:onClick="onClick"
                                    android:layout_marginLeft="20dp"
                                    android:text="银行卡暂未设置，点此跳转设置"
                                    android:textColor="@color/black2"
                                    android:textStyle="bold"
                                    android:textSize="14sp" />
                            </LinearLayout>


                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/xian" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="2dp"
                                    android:text="代扣税费"
                                    android:textStyle="bold"
                                    android:textColor="@color/black3"
                                    android:textSize="12.5sp" />

                                <TextView
                                    android:id="@+id/textView4"
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical|right"
                                    android:text="¥ 0"
                                    android:textStyle="bold"
                                    android:textColor="@color/black2"
                                    android:textSize="14sp"
                                    android:background="@drawable/edittext_bg" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/xian" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="14dp"
                                    android:text="@string/settransactionpassword_h6"
                                    android:textColor="@color/black1"
                                    android:visibility="gone" />

                                <EditText
                                    android:id="@+id/editText2"
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp"
                                    android:hint="@string/settransactionpassword_h7"
                                    android:inputType="textPassword"
                                    android:singleLine="true"
                                    android:textColor="@color/black2"
                                    android:textColorHint="@color/black3"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:background="@drawable/edittext_bg" />
                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/editText3"
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp"
                                    android:hint="@string/settransactionpassword_h5"
                                    android:inputType="number"
                                    android:paddingRight="200dp"
                                    android:singleLine="true"
                                    android:textColor="@color/black2"
                                    android:textColorHint="@color/black3"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:background="@drawable/edittext_bg" />

                                <TextView
                                    android:id="@+id/textView5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:onClick="onClick"
                                    android:paddingLeft="20dp"
                                    android:paddingTop="8dp"
                                    android:paddingRight="20dp"
                                    android:paddingBottom="8dp"
                                    android:singleLine="true"
                                    android:text="@string/app_sendcode"
                                    android:textStyle="bold"
                                    android:textColor="@color/black2"
                                    android:textSize="14sp" />

                                <View
                                    android:layout_width="0.5dp"
                                    android:layout_height="27dp"
                                    android:layout_centerVertical="true"
                                    android:layout_toLeftOf="@id/textView5"
                                    android:background="@color/xian" />

                            </RelativeLayout>

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:text="验证码已发送至"
                                android:textStyle="bold"
                                android:textColor="@color/black3"
                                android:textSize="12.5sp" />

                            <TextView
                                android:id="@+id/tv_confirm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/btn_img1"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:onClick="onClick"
                                android:text="确认提现"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:textSize="18sp" />

                        </LinearLayout>
                    </com.lihang.ShadowLayout>

                </LinearLayout>
            </ScrollView>
        </com.liaoinstan.springview.widget.SpringView>


    </LinearLayout>


</RelativeLayout>