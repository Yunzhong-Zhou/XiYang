<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/yuanjiao_10_bg_top"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:text="开户行"
                android:textColor="@color/black1"
                android:textSize="12.5sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/edittext_bg"
                android:drawableRight="@mipmap/ic_down_black"
                android:drawablePadding="10dp"
                android:focusable="false"
                android:gravity="center_vertical|right"
                android:hint="请选择开户行"
                android:onClick="onClick"
                android:paddingLeft="100dp"
                android:paddingRight="10dp"
                android:textColor="@color/black2"
                android:textColorHint="@color/black3"
                android:textSize="12.5sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:text="姓名"
                android:textColor="@color/black1"
                android:textSize="12.5sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/edittext_bg"
                android:gravity="center_vertical|right"
                android:hint="请输入姓名"
                android:paddingLeft="100dp"
                android:paddingRight="10dp"
                android:textColor="@color/black2"
                android:textColorHint="@color/black3"
                android:textSize="12.5sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:text="卡号"
                android:textColor="@color/black1"
                android:textSize="12.5sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/edittext_bg"
                android:gravity="center_vertical|right"
                android:hint="请输入卡号"
                android:inputType="number"
                android:paddingLeft="100dp"
                android:paddingRight="10dp"
                android:textColor="@color/black2"
                android:textColorHint="@color/black3"
                android:textSize="12.5sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:text="手机号"
                android:textColor="@color/black1"
                android:textSize="12.5sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/edittext_bg"
                android:focusable="false"
                android:gravity="center_vertical|right"
                android:hint="请输入手机号"
                android:inputType="phone"
                android:paddingLeft="100dp"
                android:paddingRight="10dp"
                android:textColor="@color/black2"
                android:textColorHint="@color/black3"
                android:textSize="12.5sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:text="验证码"
                android:textColor="@color/black1"
                android:textSize="12.5sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/edittext_bg"
                android:gravity="center_vertical"
                android:hint="请输入验证码"
                android:inputType="number"
                android:paddingLeft="100dp"
                android:textColor="@color/black2"
                android:textColorHint="@color/black3"
                android:textSize="12.5sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/yuanjiaobiankuang_20_lvse"
                android:onClick="onClick"
                android:paddingLeft="14dp"
                android:paddingTop="8dp"
                android:paddingRight="14dp"
                android:paddingBottom="8dp"
                android:singleLine="true"
                android:text="@string/app_sendcode"
                android:textColor="@color/green"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:text="交易密码"
                android:textColor="@color/black1"
                android:textSize="12.5sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText4"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/edittext_bg"
                android:gravity="center_vertical|right"
                android:hint="请输入交易密码"
                android:inputType="textPassword"
                android:paddingLeft="100dp"
                android:paddingRight="10dp"
                android:textColor="@color/black2"
                android:textColorHint="@color/black3"
                android:textSize="12.5sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:text="注意事项："
            android:textColor="@color/black3"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/btn_img1"
            android:gravity="center"
            android:onClick="onClick"
            android:padding="12dp"
            android:text="确认绑定"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
