<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_login">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/headView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="104dp"
                android:layout_height="104dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:shadowColor="#80000000"
                android:shadowDx="0.0"
                android:shadowDy="5.0"
                android:shadowRadius="3.0"
                android:text="喜氧"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/yuanjiao_20_heisetouming"
                android:padding="6dp"
                android:layout_gravity="center_horizontal"
                >
                <TextView
                    android:id="@+id/tv_yzm"
                    android:onClick="onClick"
                    android:layout_width="113dp"
                    android:layout_height="30dp"
                    android:text="验证码登录"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="@drawable/yuanjiao_15_lvsejianbian"/>
                <TextView
                    android:id="@+id/tv_mima"
                    android:onClick="onClick"
                    android:layout_width="113dp"
                    android:layout_height="30dp"
                    android:text="密码登录"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    />

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginTop="5dp">

                <com.lihang.ShadowLayout
                    android:id="@+id/mShadowLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:hl_cornerRadius="20dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginRight="17dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="5dp"
                    app:hl_shadowColor="#08A37C"
                    app:hl_shadowLimit="5dp"
                    app:hl_shadowOffsetX="0dp"
                    app:hl_shadowOffsetY="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/yuanjiao_20_baise"
                        android:orientation="vertical"
                        android:paddingLeft="40dp"
                        android:paddingTop="20dp"
                        android:paddingRight="40dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp">

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/editText1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:hint="请输入手机号"
                                android:inputType="phone"
                                android:paddingLeft="35dp"
                                android:singleLine="true"
                                android:textColor="@color/black2"
                                android:textColorHint="@color/black3"
                                android:textSize="12.5sp"
                                android:theme="@style/MyEditText" />


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:onClick="onClick"
                                android:padding="6dp"
                                android:src="@mipmap/ic_login_zhanghu" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp">

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/editText2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:hint="请输入验证码"
                                android:inputType="number"
                                android:paddingLeft="35dp"
                                android:paddingRight="80dp"
                                android:singleLine="true"
                                android:textColor="@color/black2"
                                android:textColorHint="@color/black3"
                                android:textSize="12.5sp"
                                android:theme="@style/MyEditText" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:onClick="onClick"
                                android:padding="6dp"
                                android:src="@mipmap/ic_login_mima" />

                            <TextView
                                android:id="@+id/textView1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:gravity="center"
                                android:onClick="onClick"
                                android:paddingLeft="20dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:text="获取验证码"
                                android:textColor="@color/green"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="32dp"
                                android:layout_alignLeft="@id/textView1"
                                android:layout_centerVertical="true"
                                android:background="@color/xian" />

                        </RelativeLayout>

                    </LinearLayout>
                </com.lihang.ShadowLayout>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="33dp"
                    android:layout_marginRight="33dp"
                    android:background="@drawable/btn_img1"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:text="登录"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_gouxuan"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_margin="5dp"
                    android:onClick="onClick"
                    android:src="@mipmap/xuanzhong" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已阅读并同意"
                    android:textColor="@color/black"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_tiaoli"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="@string/u2"
                    android:textColor="@color/blue"
                    android:textSize="10sp" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>