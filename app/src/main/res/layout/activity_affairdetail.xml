<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.liaoinstan.springview.widget.SpringView
        android:id="@+id/springView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/headView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.lihang.ShadowLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:hl_cornerRadius="8dp"
                    app:hl_shadowColor="@color/bg_gray"
                    app:hl_shadowHiddenTop="true"
                    app:hl_shadowLimit="2dp"
                    app:hl_shadowOffsetX="0dp"
                    app:hl_shadowOffsetY="2dp">

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/yuanjiao_8_baise"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="7dp">

                        <RelativeLayout
                            android:layout_width="100dp"
                            android:layout_height="69dp"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/imageView1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:scaleType="fitXY" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Name"
                                android:textColor="@color/black1"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_shop"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:drawableLeft="@mipmap/ic_contract_gray"
                                android:drawablePadding="6dp"
                                android:text="0"
                                android:textColor="@color/black3"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_addr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:drawableLeft="@mipmap/ic_device"
                                android:drawablePadding="6dp"
                                android:text="addr"
                                android:textColor="@color/black3"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="type"
                            android:textColor="@color/green"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </com.lihang.ShadowLayout>


                <com.lihang.ShadowLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:hl_cornerRadius="8dp"
                    app:hl_shadowColor="@color/bg_gray"
                    app:hl_shadowHiddenTop="true"
                    app:hl_shadowLimit="2dp"
                    app:hl_shadowOffsetX="0dp"
                    app:hl_shadowOffsetY="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="57dp"
                        android:background="@drawable/yuanjiao_8_baise"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ll_tab1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_tab1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:drawablePadding="5dp"
                                android:gravity="center"
                                android:text="事务信息"
                                android:textColor="@color/black1"
                                android:textSize="14sp" />

                            <View
                                android:id="@+id/view1"
                                android:layout_width="56dp"
                                android:layout_height="2dp"
                                android:background="@color/green" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_tab2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_tab2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:drawablePadding="5dp"
                                android:gravity="center"
                                android:text="申领信息"
                                android:textColor="@color/black3"
                                android:textSize="14sp" />

                            <View
                                android:id="@+id/view2"
                                android:layout_width="56dp"
                                android:layout_height="2dp"
                                android:background="@color/green"
                                android:visibility="invisible" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_tab3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_tab3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:drawablePadding="5dp"
                                android:gravity="center"
                                android:text="安装记录"
                                android:textColor="@color/black3"
                                android:textSize="14sp" />

                            <View
                                android:id="@+id/view3"
                                android:layout_width="56dp"
                                android:layout_height="2dp"
                                android:background="@color/green"
                                android:visibility="invisible" />
                        </LinearLayout>

                    </LinearLayout>
                </com.lihang.ShadowLayout>

                //商户信息-已审核

                <LinearLayout
                    android:id="@+id/ll_shopinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <com.lihang.ShadowLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:visibility="visible"
                        app:hl_cornerRadius="12dp"
                        app:hl_shadowColor="@color/bg_gray"
                        app:hl_shadowHiddenTop="true"
                        app:hl_shadowLimit="2dp"
                        app:hl_shadowOffsetX="0dp"
                        app:hl_shadowOffsetY="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/yuanjiao_12_baise"
                            android:orientation="vertical"
                            android:paddingLeft="22dp"
                            android:paddingRight="22dp"
                            android:paddingBottom="14dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp"
                                android:text="基本信息"
                                android:textColor="@color/black1"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_shiwu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </com.lihang.ShadowLayout>

                </LinearLayout>

                //申领信息

                <LinearLayout
                    android:id="@+id/ll_contract"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <!--合同基本信息-->
                    <com.lihang.ShadowLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:visibility="visible"
                        app:hl_cornerRadius="12dp"
                        app:hl_shadowColor="@color/bg_gray"
                        app:hl_shadowHiddenTop="true"
                        app:hl_shadowLimit="2dp"
                        app:hl_shadowOffsetX="0dp"
                        app:hl_shadowOffsetY="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/yuanjiao_12_baise"
                            android:orientation="vertical"
                            android:paddingLeft="22dp"
                            android:paddingRight="22dp"
                            android:paddingBottom="14dp">

                            <TextView
                                android:id="@+id/tv_shenlingxinxi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp"
                                android:text="申领信息"
                                android:textColor="@color/black1"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:id="@+id/ll_shenlingfangshi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingBottom="10dp">

                                <TextView
                                    android:id="@+id/tv_fangshi"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:text="申领方式"
                                    android:textColor="@color/black3"
                                    android:textSize="12.5sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_shenlingfangshi"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableRight="@mipmap/ic_down_black"
                                    android:drawablePadding="6dp"
                                    android:gravity="right"
                                    android:onClick="onClick"
                                    android:paddingBottom="10dp"
                                    android:text="自取"
                                    android:textColor="@color/black2"
                                    android:textSize="12.5sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_shouhuoren"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingBottom="10dp">

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:text="收货人"
                                    android:textColor="@color/black3"
                                    android:textSize="12.5sp"
                                    android:textStyle="bold" />

                                <EditText
                                    android:id="@+id/et_shouhuoren"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/edittext_bg"
                                    android:gravity="right"
                                    android:hint="请输入收货人"
                                    android:paddingBottom="10dp"
                                    android:text=""
                                    android:textColor="@color/black2"
                                    android:textColorHint="@color/black3"
                                    android:textSize="12.5sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_lianxifangshi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingBottom="10dp">

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:text="收货人联系方式"
                                    android:textColor="@color/black3"
                                    android:textSize="12.5sp"
                                    android:textStyle="bold" />

                                <EditText
                                    android:id="@+id/et_lianxifangshi"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/edittext_bg"
                                    android:focusable="false"
                                    android:gravity="right"
                                    android:hint="请输入收货人联系方式"
                                    android:inputType="phone"
                                    android:paddingBottom="10dp"
                                    android:text=""
                                    android:textColor="@color/black2"
                                    android:textColorHint="@color/black3"
                                    android:textSize="12.5sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_shouhuodizhi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingBottom="10dp">

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:text="收货地址"
                                    android:textColor="@color/black3"
                                    android:textSize="12.5sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_shouhuodizhi"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableRight="@mipmap/ic_down_black"
                                    android:drawablePadding="6dp"
                                    android:gravity="right"
                                    android:hint="请选择收货地址"
                                    android:onClick="onClick"
                                    android:paddingBottom="10dp"
                                    android:text=""
                                    android:textColor="@color/black2"
                                    android:textColorHint="@color/black3"
                                    android:textSize="12.5sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_xiangxidizhi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingBottom="10dp">

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:text="详细地址"
                                    android:textColor="@color/black3"
                                    android:textSize="12.5sp"
                                    android:textStyle="bold" />

                                <EditText
                                    android:id="@+id/et_xiangxidizhi"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/edittext_bg"
                                    android:gravity="right"
                                    android:hint="请输入详细地址"
                                    android:paddingBottom="10dp"
                                    android:text=""
                                    android:textColor="@color/black2"
                                    android:textColorHint="@color/black3"
                                    android:textSize="12.5sp"
                                    android:textStyle="bold" />

                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/ll_wuliugongsi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingBottom="10dp">

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:text="物流公司"
                                    android:textColor="@color/black3"
                                    android:textSize="12.5sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_wuliugongsi"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableRight="@mipmap/ic_down_black"
                                    android:drawablePadding="6dp"
                                    android:gravity="right"
                                    android:hint="请选择物流公司"
                                    android:onClick="onClick"
                                    android:paddingBottom="10dp"
                                    android:text=""
                                    android:textColor="@color/black2"
                                    android:textColorHint="@color/black3"
                                    android:textSize="12.5sp"
                                    android:textStyle="bold" />

                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/ll_kuaididanhao"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingBottom="10dp">

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:text="快递单号"
                                    android:textColor="@color/black3"
                                    android:textSize="12.5sp"
                                    android:textStyle="bold" />

                                <EditText
                                    android:id="@+id/et_kuaididanhao"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/edittext_bg"
                                    android:gravity="right"
                                    android:hint="请输入快递单号"
                                    android:paddingBottom="10dp"
                                    android:text=""
                                    android:textColor="@color/black2"
                                    android:textColorHint="@color/black3"
                                    android:textSize="12.5sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_tuihuicangku"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="10dp"
                                android:paddingBottom="10dp">

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:text="退回仓库"
                                    android:textColor="@color/black3"
                                    android:textSize="12.5sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_tuihuicangku"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:hint=""
                                    android:paddingBottom="10dp"
                                    android:text=""
                                    android:textColor="@color/black2"
                                    android:textColorHint="@color/black3"
                                    android:textSize="12.5sp"
                                    android:textStyle="bold" />

                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/ll_qianshouren"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingBottom="10dp">

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:text="签收人"
                                    android:textColor="@color/black3"
                                    android:textSize="12.5sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_qianshouren"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:hint=""
                                    android:paddingBottom="10dp"
                                    android:text=""
                                    android:textColor="@color/black2"
                                    android:textColorHint="@color/black3"
                                    android:textSize="12.5sp"
                                    android:textStyle="bold" />

                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/ll_qianshourendianhua"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingBottom="10dp">

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:text="签收人电话"
                                    android:textColor="@color/black3"
                                    android:textSize="12.5sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_qianshourendianhua"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:hint=""
                                    android:paddingBottom="10dp"
                                    android:text=""
                                    android:textColor="@color/black2"
                                    android:textColorHint="@color/black3"
                                    android:textSize="12.5sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_qianshoudizhi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingBottom="10dp">

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:text="签收地址"
                                    android:textColor="@color/black3"
                                    android:textSize="12.5sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_qianshoudizhi"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/transparent"
                                    android:gravity="right"
                                    android:hint=""
                                    android:paddingBottom="10dp"
                                    android:text=""
                                    android:textColor="@color/black2"
                                    android:textColorHint="@color/black3"
                                    android:textSize="12.5sp"
                                    android:textStyle="bold" />

                            </LinearLayout>
                            <TextView
                                android:id="@+id/tv_shangchuanzhaopian"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="上传照片"
                                android:textColor="@color/black3"
                                android:textSize="12.5sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/iv_shangchuanzhaopian"
                                android:layout_width="107dp"
                                android:layout_height="107dp"
                                android:layout_marginLeft="40dp"
                                android:layout_marginTop="10dp"
                                android:background="@mipmap/ic_add_gray"
                                android:onClick="onClick"
                                android:scaleType="fitXY" />

                            <TextView
                                android:id="@+id/tv_confirm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="30dp"
                                android:layout_marginBottom="30dp"
                                android:background="@drawable/btn_img1"
                                android:gravity="center"
                                android:onClick="onClick"
                                android:text="提交"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:visibility="visible" />
                        </LinearLayout>


                    </com.lihang.ShadowLayout>
                    <!--物流信息-->
                    <com.lihang.ShadowLayout
                        android:id="@+id/sl_daifahuo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginRight="10dp"
                        android:visibility="visible"
                        app:hl_cornerRadius="12dp"
                        app:hl_shadowColor="@color/bg_gray"
                        app:hl_shadowHiddenTop="true"
                        app:hl_shadowLimit="2dp"
                        app:hl_shadowOffsetX="0dp"
                        app:hl_shadowOffsetY="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/yuanjiao_12_baise"
                            android:orientation="vertical"
                            android:paddingLeft="22dp"
                            android:paddingRight="22dp"
                            android:paddingBottom="14dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp"
                                android:text="物流信息"
                                android:textColor="@color/black1"
                                android:textSize="14sp"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/tv_dengdaifahuo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:drawableTop="@mipmap/bg_dengdaifahuo"
                                android:gravity="center"
                                android:text="等待发货"
                                android:textColor="@color/green"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </com.lihang.ShadowLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_wuliu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible" />

                </LinearLayout>
                //安装记录

                <LinearLayout
                    android:id="@+id/ll_shenhe"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <com.lihang.ShadowLayout
                        android:id="@+id/sl_scan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:visibility="visible"
                        app:hl_cornerRadius="12dp"
                        app:hl_shadowColor="@color/bg_gray"
                        app:hl_shadowHiddenTop="true"
                        app:hl_shadowLimit="2dp"
                        app:hl_shadowOffsetX="0dp"
                        app:hl_shadowOffsetY="2dp">

                        <LinearLayout
                            android:id="@+id/ll_scan"
                            android:layout_width="match_parent"
                            android:layout_height="59dp"
                            android:background="@drawable/yuanjiao_12_baise"
                            android:gravity="center"
                            android:onClick="onClick"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/iv_scan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@mipmap/ic_scan_blue_small"
                                android:drawablePadding="20dp"
                                android:gravity="center_vertical"
                                android:letterSpacing="1"
                                android:text="安装设备"
                                android:textColor="@color/green"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_scan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:letterSpacing="0.25"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="@color/green"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </com.lihang.ShadowLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_anzhuang"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:id="@+id/ll_anzhuangshuliang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="14dp"
                        android:background="@color/white">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="总安装数量："
                            android:textColor="@color/black3"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/tv_allnum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/black1"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="已安装数量："
                            android:layout_marginLeft="15dp"
                            android:textColor="@color/black3"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/tv_innum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/black1"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </com.liaoinstan.springview.widget.SpringView>

