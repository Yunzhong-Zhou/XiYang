<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.lihang.ShadowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        app:hl_cornerRadius="8dp"
        app:hl_shadowColor="@color/bg_gray"
        app:hl_shadowHiddenTop="true"
        app:hl_shadowLimit="2dp"
        app:hl_shadowOffsetX="0dp"
        app:hl_shadowOffsetY="2dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/yuanjiao_8_baise"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="7dp">

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="69dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:scaleType="fitXY" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="@color/black1"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_shop"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/ic_store_gray"
                    android:drawablePadding="6dp"
                    android:text="0"
                    android:gravity="center"
                    android:textColor="@color/black3"
                    android:textSize="12.5sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_addr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_addr_gray"
                    android:drawablePadding="6dp"
                    android:text="addr"
                    android:textColor="@color/black3"
                    android:textSize="12.5sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_money_green"
                    android:drawablePadding="6dp"
                    android:text="0"
                    android:textColor="@color/green"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="62dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/yuanjiaobiankuang_12_lvse"
                    android:gravity="center"
                    android:text="上报"
                    android:textColor="@color/green"
                    android:textSize="11sp"
                    android:visibility="visible"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="62dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/yuanjiao_12_lvsejianbian"
                    android:gravity="center"
                    android:text="立即指派"
                    android:visibility="visible"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="TYPE"
                    android:textColor="@color/gray"
                    android:textSize="14sp"
                    android:visibility="gone"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </com.lihang.ShadowLayout>
</RelativeLayout>