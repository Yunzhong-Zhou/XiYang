<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:id="@+id/headView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:background="@color/background"
        android:orientation="vertical">

        <com.lihang.ShadowLayout
            android:id="@+id/shadowLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            app:hl_cornerRadius="8dp"
            app:hl_shadowColor="#21555555"
            app:hl_shadowHiddenTop="true"
            app:hl_shadowLimit="1dp"
            app:hl_shadowOffsetX="0dp"
            app:hl_shadowOffsetY="1dp">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/yuanjiao_8_baise"
                android:drawableLeft="@mipmap/ic_fragment3_m_1"
                android:drawablePadding="58dp"
                android:gravity="center_vertical"
                android:onClick="onClick"
                android:padding="10dp"
                android:text="合同审批"
                android:textColor="@color/green"
                android:textSize="19sp"
                android:textStyle="bold" />
        </com.lihang.ShadowLayout>

        <com.lihang.ShadowLayout
            android:id="@+id/shadowLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="10dp"
            app:hl_cornerRadius="8dp"
            app:hl_shadowColor="#21555555"
            app:hl_shadowHiddenTop="true"
            app:hl_shadowLimit="1dp"
            app:hl_shadowOffsetX="0dp"
            app:hl_shadowOffsetY="1dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/yuanjiao_8_baise"
                android:drawableLeft="@mipmap/ic_fragment3_m_2"
                android:drawablePadding="58dp"
                android:gravity="center_vertical"
                android:onClick="onClick"
                android:padding="10dp"
                android:text="人事审批"
                android:textColor="@color/green"
                android:textSize="19sp"
                android:textStyle="bold" />
        </com.lihang.ShadowLayout>

        <com.lihang.ShadowLayout
            android:id="@+id/shadowLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="10dp"
            app:hl_cornerRadius="8dp"
            app:hl_shadowColor="#21555555"
            app:hl_shadowHiddenTop="true"
            app:hl_shadowLimit="1dp"
            app:hl_shadowOffsetX="0dp"
            app:hl_shadowOffsetY="1dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/yuanjiao_8_baise"
                android:drawableLeft="@mipmap/ic_fragment3_m_3"
                android:drawablePadding="58dp"
                android:gravity="center_vertical"
                android:onClick="onClick"
                android:padding="10dp"
                android:text="采购审批"
                android:textColor="@color/green"
                android:textSize="19sp"
                android:textStyle="bold" />
        </com.lihang.ShadowLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>